package atividade2;

import javax.swing.JOptionPane;

public class Principal {

	public static void main(String[] args) {

		JOptionPane.showMessageDialog(null, "Calculo de IMC de uma pessoa.", "Bem vindo!", -1);
		
		String x = JOptionPane.showInputDialog(null,"Digite seu peso:", "IMC",-1);
		Double peso = Double.parseDouble(x);
		
		x = JOptionPane.showInputDialog(null,"Digite sua altura:", "IMC",-1);
		Double altura = Double.parseDouble(x);
		
		Double IMC;
		Double res;
		res = altura * altura;
		IMC = peso / res;
		
		
		if(IMC < 18.5) {
			JOptionPane.showMessageDialog(null, "Você está abaixo do peso ideal. \nSeu IMC é de: " + IMC);
		}else if(IMC >= 18.5 || IMC <= 24.9) {
			JOptionPane.showMessageDialog(System.out.format("A = %.2f",IMC), "Parabéns!\nVocê está em seu peso normal.\nSeu IMC é de: "+IMC);
		}else if(IMC >=25 || IMC <= 29.9) {
			JOptionPane.showMessageDialog(null, "Você está acima de seu peso.\nSeu IMC é de: "+ IMC);
		}else if(IMC >= 30 || IMC <= 34.9) {
			JOptionPane.showMessageDialog(null, "Você se encontra com Obesidade de grau I.\nSeu IMC é de: "+IMC);
		}else if(IMC >= 35 || IMC <= 39.9) {
			JOptionPane.showMessageDialog(null, "Você se encontra com Obesidade de grau II.\nSeu IMC é de: "+IMC);
		}else if(IMC >= 40) {
			JOptionPane.showMessageDialog(null, "Você se encontra com Obesidade de grau III.\nSeu IMC é de: "+IMC);
		}else{
			JOptionPane.showMessageDialog(null, "Valor Inválido!");
			
		}
		
	}
}
